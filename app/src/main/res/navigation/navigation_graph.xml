<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@+id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.arctouch.codechallenge.scenes.home.HomeFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/showMovieDetailsFromHome"
            app:destination="@+id/detailsFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />

        <action
            android:id="@+id/showSearch"
            app:destination="@id/searchFragment"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/fade_out" />

    </fragment>

    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.arctouch.codechallenge.scenes.details.DetailsFragment"
        android:label="@string/empty_space"
        tools:layout="@layout/fragment_details">

        <argument
            android:name="movie"
            app:argType="com.arctouch.codechallenge.model.Movie" />

    </fragment>

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.arctouch.codechallenge.scenes.search.SearchFragment"
        tools:layout="@layout/fragment_search">

        <action
            android:id="@+id/showMovieDetailsFromSearch"
            app:destination="@+id/detailsFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />

    </fragment>

</navigation>